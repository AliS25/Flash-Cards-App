<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fourthColor"
    tools:context=".AddCardActivity">

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginLeft="-123dp"
        android:layout_marginTop="384dp"
        android:layout_toRightOf="@id/enterAnswer"
        android:src="@drawable/ic_cancel"
        android:visibility="visible"
        android:layout_below="@id/enterAnswer"/>
    <ImageView
        android:id="@+id/save"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginRight="-123dp"
        android:layout_marginTop="384dp"
        android:layout_toLeftOf="@id/enterAnswer"
        android:src="@drawable/ic_baseline_save_24"
        android:visibility="visible"
        android:layout_below="@id/enterAnswer"/>
    <EditText
        android:id="@+id/enterQuestion"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:hint="Enter The Question Here"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/enterAnswer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:hint="Enter The Answer Here"
        android:layout_below="@id/enterQuestion"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

</RelativeLayout>
